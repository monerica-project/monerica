 @model DirectoryManager.Data.Models.Submission
@using DirectoryManager.Data.Enums
@{
    var submissionStatuses = Enum.GetValues(typeof(SubmissionStatus)).Cast<SubmissionStatus>();
}


@{
    ViewData["Title"] = "Edit Submission";
}
<h1>@ViewData["Title"]</h1>
 

<a href="~/account/home">Admin home</a>
<hr />


<form asp-action="Edit" asp-route-id="@Model.Id" method="post">



    @if (Model.DirectoryEntryId  != null)
    {
        @Html.HiddenFor(m => m.DirectoryEntryId)
        

        <i>Existing: </i>
        <a href="~/directoryentry/edit/@Model.DirectoryEntryId">Edit</a>

        <br />

        <i>Differences:</i>
        @ViewBag.Differences
    }

<br />
    <a href="@Model.Link">@Model.Link</a>
    <br />    <br />
    <div class="form-group">
        <label asp-for="SubCategoryId">Sub Category</label>
        <select asp-for="SubCategoryId" asp-items="@(new SelectList(ViewBag.SubCategories, "Id", "DisplayName"))" required></select>
    </div>
 

    <div class="form-group">
        <label asp-for="SuggestedSubCategory">Suggested Category</label>
        <input asp-for="SuggestedSubCategory" class="form-control input-width" />
        <span asp-validation-for="SuggestedSubCategory" class="text-danger"></span>
    </div>

    <!-- For SubmissionStatus Enum Dropdown -->
    <div class="form-group">
        <label asp-for="SubmissionStatus">Status</label>
        <select asp-for="SubmissionStatus" class="form-control ">
            @foreach (var status in submissionStatuses)
            {
                <option value="@status">@status</option>
            }
        </select>
        <span asp-validation-for="SubmissionStatus" class="text-danger"></span>
    </div>

    <!-- Other Fields -->
    @if (Model.DirectoryStatus != null && Model.DirectoryStatus != DirectoryStatus.Unknown)
    {
    <div class="form-group">
        <label asp-for="DirectoryStatus">Directory Status:</label>
            <select asp-for="DirectoryStatus" name="DirectoryStatus" class="form-control ">
            @foreach (var status in Enum.GetValues(typeof(DirectoryStatus)))
            {
                if ((DirectoryStatus)status == DirectoryStatus.Unknown)
                {
                    continue;
                }
             
                <option value="@((int)status)">@status.ToString()</option>
            }
        </select>
    </div>
    }

    <div class="form-group">
        <label asp-for="Name">Name</label>
        <input asp-for="Name" class="form-control input-width" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link">Link</label>
        <input  asp-for="Link" class="form-control input-width" />
        <span asp-validation-for="Link" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Link2">Link 2</label>
        <input asp-for="Link2" class="form-control input-width" />
        <span asp-validation-for="Link2" class="text-danger"></span>
    </div>


    
    <div class="form-group">
        <label asp-for="Description">Description</label>
        <textarea class="input-width input-width" cols="100" asp-for="Description"></textarea>
    </div>

<div class="form-group">
        <label asp-for="Note">Note</label>
        <textarea class="input-width"  cols="100" asp-for="Note"></textarea>
</div>

    <div class="form-group">
        <label asp-for="Processor">Processor</label>
        <input asp-for="Processor" class="form-control input-width" />
        <span asp-validation-for="Processor" class="text-danger"></span>
    </div>
    
<div class="form-group">
        <label asp-for="Contact">Contact</label>
        <input asp-for="Contact" class="form-control input-width" />
        <span asp-validation-for="Contact" class="text-danger"></span>
        </div>
    <div class="form-group">
        <label asp-for="Location">Location</label>
        <input asp-for="Location" class="form-control input-width" />
        <span asp-validation-for="Location" class="text-danger"></span>
    </div>

    <!-- Submit Button -->
    <button type="submit" class="btn btn-primary">Update</button>
</form>

        <br />
<a href="~/submission/delete/@Model.Id">Delete</a>