@using DirectoryManager.Web.Constants;
@model DirectoryManager.Web.Models.SponsoredListingHomeModel;

@{
    ViewData["Title"] = "Sponsored Listings";
}
<h1>@ViewData["Title"]</h1>

<a href="~/">Back to home</a>
<hr />

<h2>Listing Details</h2>
<p>
Sponsored listings are a way to support the directory and get your listing to seen by more people.
A maximum of three sponsored listings are shown at the top of the directory.
The topmost listing is the one that has the longest duration left.
In addition to being at the top of the page, your listing is also highlighted.
</p>

<p>
    Steps for listing:
</p>

<ol>
    <li>Select your listing</li>
    <li>Choose your listing duration</li>
    <li>Pay for your sponsored listing</li>
    <li>Listing goes live automatically</li>
</ol>

    @if (Model.CanCreateSponsoredListing)
    {
    <p>
        <a class="btn"  href="~/sponsoredlisting/selectlisting">Select Listing</a>        
    </p>
    }
    else
    {
        <p>
            The maximum number of sponsored listings is currently reached.
        </p>

        <p>
        The next availability for a sponsored listing is at: <b>@Model.NextListingExpiration.ToString(StringConstants.DateTimeFormat)</b>
    </p>
    }