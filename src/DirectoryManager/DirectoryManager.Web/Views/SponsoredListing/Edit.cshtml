@using DirectoryManager.Web.Constants;
@model DirectoryManager.Web.Models.EditListingViewModel
@{
    ViewData["Title"] = "Edit Sponsored Listing";
}
 
<h1>@ViewData["Title"]</h1>

<a href="~/account/home">Admin home</a>

<hr />

<form method="post">
    <div class="form-group">
        <label for="CampaignStartDate">Start Date</label>
        <input type="date" class="form-control" id="CampaignStartDate" name="CampaignStartDate" value="@Model.CampaignStartDate.ToString(StringConstants.DateFormat)" required />
    </div>
    <div class="form-group">
        <label for="CampaignEndDate">End Date</label>
        <input type="date" class="form-control" id="CampaignEndDate" name="CampaignEndDate" value="@Model.CampaignEndDate.ToString(StringConstants.DateFormat)" required />
    </div>
    <button type="submit" class="btn btn-primary">Update</button>
</form>
