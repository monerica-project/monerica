@using DirectoryManager.Web.Services.Interfaces
@using Microsoft.AspNetCore.Html
@using System.Text.RegularExpressions
@using System.Net
@using System.Text.Json
@using DirectoryManager.Data.Models
@using System.Globalization
@model DirectoryManager.Web.Models.EntryReviewsBlockViewModel
@inject IUrlResolutionService Urls

@functions {
    private const string LinkClass = "multi-line-text";

    private static readonly Regex UrlRegex = new(
        @"(?:(?:https?://)|(?:www\.))[\w\-\.]+(?:\.[a-z]{2,})(?:[^\s<>]*)?",
        RegexOptions.IgnoreCase | RegexOptions.CultureInvariant | RegexOptions.Compiled);

    public static IHtmlContent RenderBodyWithLinks(string? text)
    {
        if (string.IsNullOrEmpty(text))
            return new HtmlString(string.Empty);

        var sb = new System.Text.StringBuilder();
        int last = 0;

        foreach (Match m in UrlRegex.Matches(text))
        {
            string before = WebUtility.HtmlEncode(text.Substring(last, m.Index - last))
                .Replace("\r\n", "\n").Replace("\n", "<br/>");
            sb.Append(before);

            string raw = m.Value;
            string trimmed = raw.TrimEnd('.', ',', ';', ')', ']', '}', '!', '?', '>', '"', '\'');
            string trailing = raw.Substring(trimmed.Length);

            string href = trimmed.StartsWith("www.", StringComparison.OrdinalIgnoreCase)
                ? $"https://{trimmed}"
                : trimmed;

            sb.Append($"<a class=\"{LinkClass}\" href=\"{WebUtility.HtmlEncode(href)}\" target=\"_blank\" rel=\"noopener noreferrer nofollow ugc\">{WebUtility.HtmlEncode(trimmed)}</a>");

            if (trailing.Length > 0)
                sb.Append(WebUtility.HtmlEncode(trailing));

            last = m.Index + m.Length;
        }

        sb.Append(WebUtility.HtmlEncode(text.Substring(last))
            .Replace("\r\n", "\n").Replace("\n", "<br/>"));

        return new HtmlString(sb.ToString());
    }

    public static IHtmlContent RenderAggregateStars(double? avg, int? count, bool starsOnly = false)
    {
        if (!avg.HasValue || !count.HasValue || count.Value <= 0)
            return HtmlString.Empty;

        const int totalStars = 5;
        double percent = Math.Clamp(avg.Value / totalStars * 100, 0, 100);

        if (starsOnly)
        {
            return new HtmlString($@"
<span class=""rating-wrapper"" aria-label=""{avg:0.0} out of 5 stars from {count} reviews"">
  <span class=""stars""><span class=""stars-fill"" style=""width:{percent:0.##}%""></span></span>
</span>");
        }

        return new HtmlString($@"
<span class=""rating-wrapper"" aria-label=""{avg:0.0} out of 5 stars from {count} reviews"">
  <span class=""stars""><span class=""stars-fill"" style=""width:{percent:0.##}%""></span></span>
  <span class=""rating-text""> {avg:0.0}/5 ({count})</span>
</span>");
    }

    public static List<DirectoryEntryReviewComment> GetReplies(
        Dictionary<int, List<DirectoryEntryReviewComment>>? dict, int reviewId)
    {
        if (dict == null) return new();
        return dict.TryGetValue(reviewId, out var list) ? list : new();
    }

    public static IHtmlContent RenderAggregateStars(double? avg, int? count)
    {
        if (!avg.HasValue || !count.HasValue || count.Value <= 0)
            return HtmlString.Empty;

        const int totalStars = 5;
        double percent = Math.Clamp(avg.Value / totalStars * 100, 0, 100);

        return new HtmlString($@"
<span class=""rating-wrapper"" aria-label=""{avg:0.0} out of 5 stars from {count} reviews"">
  <span class=""stars""><span class=""stars-fill"" style=""width:{percent:0.##}%""></span></span>
  <span class=""rating-text""> {avg:0.0}/5 ({count})</span>
</span>");
    }

    public static IHtmlContent RenderSingleReviewStars(byte? rating)
    {
        if (!rating.HasValue || rating.Value < 1)
            return HtmlString.Empty;

        double percent = Math.Clamp(rating.Value / 5.0 * 100, 0, 100);

        return new HtmlString($@"
<span class=""rating-wrapper"" aria-label=""{rating}/5"">
  <span class=""stars""><span class=""stars-fill"" style=""width:{percent:0.##}%""></span></span>
</span>");
    }
}
 

@{
    var pageUrl = ViewData[DirectoryManager.Web.Constants.StringConstants.CanonicalUrl];

    // Rating distribution (1–5)
    int totalReviews = Model?.Reviews?.Count ?? 0;

    int c5 = Model?.Reviews?.Count(x => (x.Rating ?? 0) == 5) ?? 0;
    int c4 = Model?.Reviews?.Count(x => (x.Rating ?? 0) == 4) ?? 0;
    int c3 = Model?.Reviews?.Count(x => (x.Rating ?? 0) == 3) ?? 0;
    int c2 = Model?.Reviews?.Count(x => (x.Rating ?? 0) == 2) ?? 0;
    int c1 = Model?.Reviews?.Count(x => (x.Rating ?? 0) == 1) ?? 0;

    double P(int count) => totalReviews <= 0 ? 0 : (count * 100.0 / totalReviews);
}
 
<div class="reviews-block mt-4">
    <h3 id="reviews" class="mb-3">Reviews</h3> 

    @if (Model.ReviewCount > 0)
    {
        <div class="rating-summary" aria-label="Review summary">
            <div class="rs-left">
                <div class="rs-avg">@Model.AverageRating.Value.ToString("0.0")</div>

                <div class="rs-stars">
                    @Html.Raw(RenderAggregateStars(Model.AverageRating, Model.ReviewCount, true))
                </div>

                <div class="rs-count">@Model.ReviewCount rating@(Model.ReviewCount == 1 ? "" : "s")</div>
            </div>

            <div class="rs-right" aria-label="Rating distribution">
                <div class="rating-row">
                    <div class="rating-num">5</div>
                    <div class="rating-track">
                        <div class="rating-fill" style="width:@P(c5).ToString("0.##", CultureInfo.InvariantCulture)%"></div>
                    </div>
                    <div class="rating-pct">@Math.Round(P(c5))%</div>
                </div>

                <div class="rating-row">
                    <div class="rating-num">4</div>
                    <div class="rating-track">
                        <div class="rating-fill" style="width:@P(c4).ToString("0.##", CultureInfo.InvariantCulture)%"></div>
                    </div>
                    <div class="rating-pct">@Math.Round(P(c4))%</div>
                </div>

                <div class="rating-row">
                    <div class="rating-num">3</div>
                    <div class="rating-track">
                        <div class="rating-fill" style="width:@P(c3).ToString("0.##", CultureInfo.InvariantCulture)%"></div>
                    </div>
                    <div class="rating-pct">@Math.Round(P(c3))%</div>
                </div>

                <div class="rating-row">
                    <div class="rating-num">2</div>
                    <div class="rating-track">
                        <div class="rating-fill" style="width:@P(c2).ToString("0.##", CultureInfo.InvariantCulture)%"></div>
                    </div>
                    <div class="rating-pct">@Math.Round(P(c2))%</div>
                </div>

                <div class="rating-row">
                    <div class="rating-num">1</div>
                    <div class="rating-track">
                        <div class="rating-fill" style="width:@P(c1).ToString("0.##", CultureInfo.InvariantCulture)%"></div>
                    </div>
                    <div class="rating-pct">@Math.Round(P(c1))%</div>
                </div>
            </div>
        </div>
    }

    @if (Model.ReviewCount > 0)
    {
        <ul class="list-unstyled">
            @foreach (var r in Model.Reviews)
            {
                var replies = GetReplies(Model.RepliesByReviewId, r.DirectoryEntryReviewId);

                <li id="review-@r.DirectoryEntryReviewId"
                    class="mb-4 pb-3 border-bottom"
                    itemscope
                    itemtype="https://schema.org/Review">

                    <div class="d-flex align-items-center">
                        @Html.Raw(RenderSingleReviewStars(r.Rating))
                        <small class="text-muted ms-2">@r.Rating/5</small>

                        <span itemprop="reviewRating" itemscope itemtype="https://schema.org/Rating">
                            <meta itemprop="ratingValue" content="@((r.Rating ?? 0))" />
                            <meta itemprop="bestRating" content="5" />
                            <meta itemprop="worstRating" content="1" />
                        </span>
                    </div>

                    <div class="mt-2" itemprop="reviewBody">
                        @RenderBodyWithLinks(r.Body)
                    </div>

                    <div class="mt-2">
                        <span itemprop="author" itemscope itemtype="https://schema.org/Person">
                            <small class="text-muted multi-line-text">
                                Author: @(string.IsNullOrWhiteSpace(r.DisplayName) ? r.AuthorFingerprint : r.DisplayName)
                            </small>
                        </span>
                        <small class="text-muted ms-2">•</small>
                        <time class="text-muted ms-2"
                              itemprop="datePublished"
                              datetime="@r.CreateDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat)">
                            @r.CreateDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat)
                        </time>
                    </div>

                    <div class="mt-3">
                        <form action="@Urls.ResolveToApp("/directory-entry-review-replies/begin")"
                              method="post" class="d-inline" rel="nofollow">
                            <input type="hidden" name="directoryEntryReviewId" value="@r.DirectoryEntryReviewId" />
                            <input type="text" name="website" value="" style="display:none" />
                            <button class="btn review-btn btn-sm btn-outline-secondary" type="submit">Reply</button>
                        </form>
                    </div>

                    @if (replies.Any())
                    {
                        <div class="mt-3 ps-3 border-start">
                            <div class="text-muted mb-2"><span><strong>Replies</strong></span></div>

                            <ul class="list-unstyled mb-0">
                                @foreach (var c in replies)
                                {
                                    <li id="review-comment-@c.DirectoryEntryReviewCommentId" class="reply-item">
                                        <div class="reply-body">
                                            @RenderBodyWithLinks(c.Body)
                                        </div>

                                        <div class="reply-meta">
                                            <small class="text-muted multi-line-text">
                                                Author: @(string.IsNullOrWhiteSpace(c.DisplayName) ? c.AuthorFingerprint : c.DisplayName)
                                            </small>
                                            <small class="text-muted ms-2">•</small>
                                            <time class="text-muted ms-2"
                                                  datetime="@((c.UpdateDate ?? c.CreateDate).ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat))">
                                                @((c.UpdateDate ?? c.CreateDate).ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat))
                                            </time>
                                        </div>
                                    </li>
                                }
                            </ul>

                        </div>
                    }
                </li>
            }
        </ul>
    }
    else
    {
        <p class="text-muted">No reviews yet.</p>
    }

    <form action="@Urls.ResolveToApp("/directory-entry-reviews/begin")"
          method="post"
          class="d-inline"
          rel="nofollow">
        <input type="hidden" name="directoryEntryId" value="@Model.DirectoryEntryId" />
        <button class="btn review-btn" type="submit">Leave a review</button>
    </form>
</div>
