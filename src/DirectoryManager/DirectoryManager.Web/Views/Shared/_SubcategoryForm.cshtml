@using DirectoryManager.Data.Models
@model DirectoryManager.Data.Models.Subcategory

<div class="form-group">
    <label for="CategoryId">Parent Category</label>
    <select id="CategoryId" name="CategoryId" class="form-control" required>
        @foreach (var category in (IEnumerable<Category>)ViewBag.Categories)
        {
            <option value="@category.CategoryId"
                    selected="@(Model.Category != null && Model.Category.CategoryId == category.CategoryId ? "selected" : null)">
                @category.Name
            </option>
        }
    </select>
</div>

<div class="form-group">
    <label for="Name">Subcategory Name</label>
    <input autocomplete="off" type="text" id="Name" name="Name" class="form-control input-width"
           value="@Model.Name" required />
</div>

<div class="form-group">
    <label asp-for="Description">Description</label>
    <textarea class="form-control input-width" asp-for="Description"></textarea>
</div>

<div class="form-group">
    <label asp-for="Note">Note</label>
    <textarea class="form-control input-width" asp-for="Note"></textarea>
</div>

<hr />
<p>For subcategory specific page</p>

<div class="form-group">
    <label asp-for="MetaDescription">Meta Description</label>
    <input autocomplete="off" class="input-width" maxlength="160" name="MetaDescription"
           value="@Model.MetaDescription" />
</div>

<div class="form-group">
    <label asp-for="PageDetails">Page Details</label>
    <textarea class="form-control input-width" asp-for="PageDetails"></textarea>
</div>
