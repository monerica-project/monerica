@model DirectoryManager.Web.Models.ContentSnippet.ContentSnippetEditModel

<form asp-controller="ContentSnippetManagement" asp-action="@ViewData["Action"]" method="post" class="form-horizontal">
    @Html.HiddenFor(x => x.ContentSnippetId)

    <div class="form-group">
        <label asp-for="SnippetType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="SnippetType" asp-items="(IEnumerable<SelectListItem>)ViewBag.SnippetTypes" class="form-control"></select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Content" class="form-control" style="width: 100%;" rows="10"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">@ViewData["ButtonLabel"]</button>
        </div>
    </div>
</form>