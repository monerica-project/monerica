@{
    var allTags = ViewBag.AllTags as IEnumerable<dynamic>;
}

@if (allTags != null && allTags.Any())
{
    <h4 style="margin-bottom:8px;">Tags</h4>

    <div class="tag-grid">
        @foreach (var t in allTags)
        {
            var id = (int)t.TagId;

            // ✅ support BOTH flows:
            // - existing listing edit (Model.SelectedTagIds)
            // - submission review page (ViewBag.SelectedTagIds is a HashSet<int>)
            var selectedSet = ViewBag.SelectedTagIds as HashSet<int>;
            var isChecked =
            (selectedSet != null && selectedSet.Contains(id)) ||
            (Model.SelectedTagIds != null && Model.SelectedTagIds.Contains(id));

            <label class="tag-chip">
                <input type="checkbox"
                       name="SelectedTagIds"
                       value="@id"
                       @(isChecked ? "checked" : "") />
                <span>@t.Name</span>
            </label>
        }
    </div>
}

<div class="form-group">
