@using DirectoryManager.Data.Models
@model Subcategory
@using DirectoryManager.Web.Constants;
@{
    ViewData[StringConstants.TitleHeader] = "Edit Subcategory";
}
<h1>@ViewData[StringConstants.TitleHeader]</h1>

@await Html.PartialAsync("_AdminMenu")

<hr />

<form method="post" action="~/subcategory/edit">
    <input autocomplete="off" type="hidden" name="SubCategoryId" value="@Model.SubCategoryId" />
    <div class="form-group">
        <label>Parent Category</label>
        <select name="CategoryId" required>
            @foreach (var category in (IEnumerable<Category>)ViewBag.Categories)
            {
                <option value="@category.CategoryId" selected="@(Model.Category != null && Model.Category.CategoryId == category.CategoryId ? "selected" : null)">@category.Name</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label>Name</label>
        <input autocomplete="off" type="text" name="Name" value="@Model.Name" required />
    </div>
    <div class="form-group">
        <label asp-for="MetaDescription">Meta Description</label>
        <input autocomplete="off" class="input-width" maxlength="160" cols="100" name="MetaDescription" value="@Model.MetaDescription" />
    </div>
    <div class="form-group">
        <label asp-for="Note">Description</label>
        <textarea class="input-width" cols="100" asp-for="Description"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Note">Note</label>
        <textarea class="input-width" cols="100" asp-for="Note"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="PageDetails">Page Details</label>
        <input autocomplete="off" class="input-width" maxlength="160" cols="100" name="PageDetails" value="@Model.PageDetails" />
    </div>
    <button type="submit">Update</button>
</form>