@using DirectoryManager.Web.Constants
@{
    ViewData[StringConstants.TitleHeader] = "Thank You";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <div class="page-header-bar">
        <h1 class="page-title">@ViewData[StringConstants.TitleHeader]</h1>
        @await Html.PartialAsync("_SiteLogo")
    </div>
    <hr />

    @{
        // If you ever set a specific reply message elsewhere, keep supporting it:
        var msg = TempData["ReplyMessage"] as string;

        // This is what your controller sets:
        var statusMsg = TempData["ReviewPostStatusMessage"] as string;

        string finalMessage;

        if (!string.IsNullOrWhiteSpace(msg))
        {
            finalMessage = msg;
        }
        else if (!string.IsNullOrWhiteSpace(statusMsg))
        {
            finalMessage = statusMsg;
        }
        else
        {
            finalMessage = "Thanks! Your reply has been received.";
        }
    }

    <p><b>@finalMessage</b></p>

    @await Html.PartialAsync("_BackToHome")
}