@using DirectoryManager.Data.Models.Reviews
@using DirectoryManager.Data.Enums
@model ReviewTag

@{
    var isEdit = Model.ReviewTagId != 0;
    ViewData["Title"] = isEdit ? "Edit Tag" : "Create Tag";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <div class="container py-4">
        <h1>@ViewData["Title"]</h1>
        <hr />

        <div asp-validation-summary="All" class="text-danger mb-3"></div>

        @if (isEdit)
        {
            <form asp-action="Edit" asp-route-id="@Model.ReviewTagId" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="ReviewTagId" />

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Slug" class="form-label"></label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                    <div class="form-text">Leave blank to auto-generate from Name.</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Level" class="form-label">Color / Level</label>
                    <select asp-for="Level"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<ReviewTagLevel>()">
                    </select>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" class="form-check-input" />
                    <label asp-for="IsEnabled" class="form-check-label"></label>
                </div>

                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>
        }
        else
        {
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label asp-for="Name" class="form-label"></label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Slug" class="form-label"></label>
                    <input asp-for="Slug" class="form-control" />
                    <span asp-validation-for="Slug" class="text-danger"></span>
                    <div class="form-text">Leave blank to auto-generate from Name.</div>
                </div>

                <div class="mb-3">
                    <label asp-for="Description" class="form-label"></label>
                    <textarea asp-for="Description" rows="3" class="form-control"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Level" class="form-label">Color / Level</label>
                    <select asp-for="Level"
                            class="form-select"
                            asp-items="Html.GetEnumSelectList<ReviewTagLevel>()">
                    </select>
                    <span asp-validation-for="Level" class="text-danger"></span>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsEnabled" class="form-check-input" />
                    <label asp-for="IsEnabled" class="form-check-label"></label>
                </div>

                <button class="btn btn-primary" type="submit">Save</button>
                <a class="btn btn-secondary" asp-action="Index">Cancel</a>
            </form>
        }
    </div>
}
