@model DirectoryManager.Web.Models.Reviews.DeleteMyReviewVm
@using DirectoryManager.Web.Constants

@{
    ViewData[StringConstants.TitleHeader] = "Delete Review";
    Layout = "_CenteredLayout";
}
@section PageContent {
<h1>Delete review?</h1>

<p>
    This will permanently delete your review for <strong>@Model.ListingName</strong>.
</p>

<div class="card p-3">
    <div class="mb-2 text-muted">
        Rating: @(Model.Review.Rating?.ToString() ?? "N/A")
        • @( (Model.Review.UpdateDate ?? Model.Review.CreateDate).ToString("yyyy-MM-dd") )
    </div>
    <div style="white-space:pre-wrap">@Model.Review.Body</div>
</div>

<br />

<form asp-action="DeleteReviewConfirmed"
      asp-route-flowId="@Model.FlowId"
      asp-route-id="@Model.Review.DirectoryEntryReviewId"
      method="post">
    @Html.AntiForgeryToken()

    <button type="submit" class="btn btn-danger">Yes, delete</button>
    <a class="btn btn-secondary"
           href="@Url.Action("Index", "MyReviews", new { flowId = Model.FlowId })">
        Cancel
    </a>
</form>
}