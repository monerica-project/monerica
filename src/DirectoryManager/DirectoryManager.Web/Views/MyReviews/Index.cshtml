@model DirectoryManager.Web.Models.Reviews.MyReviewsIndexVm
@using DirectoryManager.Web.Constants

@{
    ViewData[StringConstants.TitleHeader] = "My Reviews";
    Layout = "_CenteredLayout";

    var flowId = (Guid)ViewBag.FlowId;
}
@section PageContent {
<h1>My Reviews</h1>

<p class="text-muted">
    Fingerprint: <strong>@Model.Fingerprint</strong>
</p>

@if (TempData["SuccessMessage"] is string msg && !string.IsNullOrWhiteSpace(msg))
{
    <div class="alert alert-success">@msg</div>
}

@if (Model.Reviews.Count == 0)
{
    <div class="card p-3">
        <p>No reviews found for this fingerprint.</p>
    </div>
}
else
{
    foreach (var row in Model.Reviews)
    {
        var r = row.Review;
        var listingName = r.DirectoryEntry?.Name ?? "Listing";
        var listingKey = r.DirectoryEntry?.DirectoryEntryKey ?? string.Empty;

        <div class="card p-3 mb-3">
            <h3 class="mb-1">
                @listingName
            </h3>

            @* Optional: link to listing page if you have a standard route *@
            @if (!string.IsNullOrWhiteSpace(listingKey))
            {
                <div class="mb-2">
                    <a class="app-link" href="/site/@listingKey">View listing</a>
                </div>
            }

            <div class="mb-2">
                <strong>Rating:</strong> @(r.Rating?.ToString() ?? "N/A")
                <span class="text-muted"> • </span>
                <span class="text-muted">
                    @( (r.UpdateDate ?? r.CreateDate).ToString("yyyy-MM-dd") )
                </span>
            </div>

            <div style="white-space:pre-wrap">@r.Body</div>

            <div class="mt-3">
                <a class="btn btn-danger"
                       href="@Url.Action("DeleteReview", "MyReviews", new { flowId = flowId, id = r.DirectoryEntryReviewId })">
                    Delete review
                </a>
            </div>

            @if (row.Comments?.Count > 0)
            {
                <hr />
                <h4>Replies</h4>

                foreach (var c in row.Comments)
                {
                    <div class="card p-2 mb-2">
                        <div class="text-muted mb-1">
                            @( (c.UpdateDate ?? c.CreateDate).ToString("yyyy-MM-dd HH:mm") )
                            @if (!string.IsNullOrWhiteSpace(c.AuthorFingerprint) && c.AuthorFingerprint == Model.Fingerprint)
                            {
                                <span class="text-muted"> • </span>
                                <strong>You</strong>
                            }
                        </div>

                        <div style="white-space:pre-wrap">@c.Body</div>

                        @if (!string.IsNullOrWhiteSpace(c.AuthorFingerprint) && c.AuthorFingerprint == Model.Fingerprint)
                        {
                            <div class="mt-2">
                                <a class="btn btn-danger"
                                       href="@Url.Action("DeleteReply", "MyReviews", new { flowId = flowId, id = c.DirectoryEntryReviewCommentId })">
                                    Delete reply
                                </a>
                            </div>
                        }
                    </div>
                }
            }
        </div>
    }

    @* Simple pager *@
    if (Model.TotalPages > 1)
    {
        <div class="mt-3">
            <div class="text-muted mb-2">
                Page @Model.Page of @Model.TotalPages
            </div>

            <div class="d-flex gap-2">
                @if (Model.Page > 1)
                {
                    <a class="btn btn-secondary"
                           href="@Url.Action("Index", "MyReviews", new { flowId = flowId, page = Model.Page - 1, pageSize = Model.PageSize })">
                        Prev
                    </a>
                }

                @if (Model.Page < Model.TotalPages)
                {
                    <a class="btn btn-secondary"
                           href="@Url.Action("Index", "MyReviews", new { flowId = flowId, page = Model.Page + 1, pageSize = Model.PageSize })">
                        Next
                    </a>
                }
            </div>
        </div>
    }
}
}