@model DirectoryManager.Data.Models.Category


@{
    ViewData["Title"] = "Create Category";
}
<h1>@ViewData["Title"]</h1>

 
@await Html.PartialAsync("_AdminMenu")
<hr />

<form method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="Name">Category Name:</label>
        <input  asp-for="Name" class="form-control input-width" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="MetaDescription">Meta Description</label>
        <input class="input-width" maxlength="160" cols="100" name="MetaDescription" value="@Model.MetaDescription" />
    </div>
    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <textarea asp-for="Description" class="form-control input-width"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Note">Note:</label>
        <textarea asp-for="Note" class="form-control input-width" ></textarea>
        <span asp-validation-for="Note" class="text-danger"></span>
    </div>

    <div>
        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>
 