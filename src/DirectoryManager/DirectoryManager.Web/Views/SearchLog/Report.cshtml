@using DirectoryManager.Utilities.Helpers
@model DirectoryManager.Web.Models.SearchLogReportViewModel

@{
    ViewData["Title"] = "Search Report";
    Layout = "_CenteredLayout";

    // helpers for ISO formatting
    Func<DateTime, string> iso = dt => dt.ToString("o");
}

@section PageContent {
    <h1>@ViewData["Title"]</h1>
    @await Html.PartialAsync("_AdminMenu")

    <p>
        <!-- quick-filter links -->
        Quick Filter:
        <a asp-action="Report"
           asp-route-start="@iso(DateTime.UtcNow.AddHours(-24))"
           asp-route-end="@iso(DateTime.UtcNow)">
            Last 24 Hours
        </a> |
        <a asp-action="Report"
           asp-route-start="@iso(DateTime.UtcNow.Date)"
           asp-route-end="@iso(DateTime.UtcNow)">
            Today (UTC)
        </a> |
        <a asp-action="Report"
           asp-route-start="@iso(DateTime.UtcNow.AddDays(-7))"
           asp-route-end="@iso(DateTime.UtcNow)">
            Last 7 Days
        </a> |
        <a asp-action="Report"
           asp-route-start="@iso(DateTime.UtcNow.AddDays(-30))"
           asp-route-end="@iso(DateTime.UtcNow)">
            Last 30 Days
        </a>
    </p>

    <hr />

    <form method="get" asp-action="Report" class="form-row align-items-end mb-4">
        <div class="form-group col-md-3">
            <label for="start">Start date/time (UTC)</label>
            <input id="start"
                   name="start"
                   type="date"
                   class="form-control"
                   value="@(Model.StartDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat))" />
        </div>
        <div class="form-group col-md-3">
            <label for="end">End date/time (UTC)</label>
            <input id="end"
                   name="end"
                   type="date"
                   class="form-control"
                   value="@(Model.EndDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat))" />
        </div>
        <div class="form-group col-md-2">
            <button type="submit" class="btn btn-primary">Run</button>
        </div>
    </form>

    <p>
        Time Range:
        @Model.StartDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateTimeFormat)
        –
        @Model.EndDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateTimeFormat)
    </p>

    <div class="table-wrapper">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th>Term</th>
                    <th class="text-right">Count</th>
                    <th class="text-right">%</th>
                    <th>First Searched</th>
                    <th>Last Searched</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.ReportItems)
                {
                    <tr>
                        <td>@StringHelpers.Truncate(item.Term, 50)</td>
                        <td class="text-right">@item.Count</td>
                        <td class="text-right">@item.Percentage.ToString("0.00")%</td>
                        <td>
                            @item.FirstSearched.ToString(
                            DirectoryManager.Common.Constants.StringConstants.DateTimeFormat)
                </td>
                <td>
                    @item.LastSearched.ToString(
                                        DirectoryManager.Common.Constants.StringConstants.DateTimeFormat)
                </td>
            </tr>
                        }
            </tbody>
            <tfoot>
                <tr>
                    <th>Total</th>
                    <th class="text-right">@Model.TotalTerms</th>
                    <th colspan="3"></th>
                </tr>
            </tfoot>
        </table>
    </div>
}
