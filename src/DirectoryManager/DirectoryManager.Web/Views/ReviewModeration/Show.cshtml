@using DirectoryManager.Web.Constants
@using DirectoryManager.Data.Enums
@using DirectoryManager.Data.Models.Reviews
@using DirectoryManager.Data.Repositories.Interfaces
@using DirectoryManager.Web.Models
@model ReviewModerationReviewViewModel

@inject IDirectoryEntryReviewCommentRepository CommentRepo

@{
    Layout = "_CenteredLayout";

    var r = Model.Review;
    ViewData[StringConstants.TitleHeader] = $"Review #{r.DirectoryEntryReviewId}";
}

@section PageContent {

    <h1>@ViewData[StringConstants.TitleHeader]</h1>

    @await Html.PartialAsync("_AdminMenu")

    @if (!ViewData.ModelState.IsValid)
    {
        <div class="alert alert-danger">
            @Html.ValidationSummary(excludePropertyErrors: true, message: "Please fix the errors below.")
        </div>
    }

    <dl class="row">
        <dt class="col-sm-3">Status</dt>
        <dd class="col-sm-9">@r.ModerationStatus</dd>

        <dt class="col-sm-3">Directory Entry Id</dt>
        <dd class="col-sm-9">
            <a href="~/directoryentry/edit/@r.DirectoryEntryId">@r.DirectoryEntryId</a>
        </dd>

        <dt class="col-sm-3">Rating</dt>
        <dd class="col-sm-9">@((r.Rating?.ToString()) ?? "-")</dd>

        <dt class="col-sm-3">Title</dt>
        <dd class="col-sm-9">@(string.IsNullOrWhiteSpace(r.Title) ? "-" : r.Title)</dd>

        <dt class="col-sm-3">Author Fingerprint</dt>
        <dd class="col-sm-9"><code>@r.AuthorFingerprint</code></dd>

        <dt class="col-sm-3">Created (UTC)</dt>
        <dd class="col-sm-9">@r.CreateDate.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat)</dd>

        <dt class="col-sm-3">Updated (UTC)</dt>
        <dd class="col-sm-9">@((r.UpdateDate?.ToString(DirectoryManager.Common.Constants.StringConstants.DateFormat)) ?? "-")</dd>

        <dt class="col-sm-3">Order Proof</dt>
        <dd class="col-sm-9">
            @if (!string.IsNullOrWhiteSpace(r.OrderUrl))
            {
                <a href="@r.OrderUrl" target="_blank" rel="noopener noreferrer nofollow">@r.OrderUrl</a>
            }
            else if (!string.IsNullOrWhiteSpace(r.OrderId))
            {
                <code>@r.OrderId</code>
            }
            else
            {
                <span class="text-muted">-</span>
            }
        </dd>

        <dt class="col-sm-3">Body</dt>
        <dd class="col-sm-9">
            <pre style="white-space:pre-wrap;">@r.Body</pre>
        </dd>
    </dl>

    <div class="mt-3">
        <a asp-action="Pending">Back to Pending</a> |
        <a asp-action="All">Back to All</a>
    </div>

    <hr />

    <!-- ===================== -->
    <!-- Update Order Proof + Tags -->
    <!-- ===================== -->
    <h2 class="h5 mt-3">Update proof & tags</h2>

    <form asp-action="Update"
          asp-route-id="@r.DirectoryEntryReviewId"
          method="post"
          class="mt-2">
        @Html.AntiForgeryToken()

        <div class="mb-3">
            <label class="form-label" for="orderProof">Order Proof (optional)</label>
            <input id="orderProof"
                   name="orderProof"
                   value="@(Model.OrderProof ?? string.Empty)"
                   class="form-control"
                   maxlength="2048" />
            <div class="form-text">
                Paste an order ID or an order URL. If provided, approved reviews are forced back to Pending.
            </div>
        </div>

        <div class="mb-3">
            <label class="form-label">Tags</label>
            <div class="border rounded p-2">
                @if (Model.AllTags == null || Model.AllTags.Count == 0)
                {
                    <div class="text-muted">No tags exist yet.</div>
                }
                else
                {
                    var selected = Model.SelectedTagIds ?? new List<int>();
                    foreach (var t in Model.AllTags)
                    {
                        var isChecked = selected.Contains(t.Id);
                        <div class="form-check">
                            <input class="form-check-input"
                                   type="checkbox"
                                   name="selectedTagIds"
                                   value="@t.Id"
                                   @(isChecked ? "checked" : "")
                                   @(t.IsEnabled ? "" : "disabled") />
                            <label class="form-check-label">
                                @t.Name @(t.IsEnabled ? "" : "(disabled)")
                            </label>
                        </div>
                    }
                }
            </div>
            <div class="form-text">
                Manage tags in <a href="/review-tags">Review Tags</a>.
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Save Proof/Tags</button>
    </form>

    <hr />

    <!-- ===================== -->
    <!-- Review Actions -->
    <!-- ===================== -->
    <div class="mt-3">
        @if (r.ModerationStatus != ReviewModerationStatus.Approved)
        {
            <form asp-action="Approve"
                  asp-route-id="@r.DirectoryEntryReviewId"
                  method="post"
                  class="d-inline">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-success">Approve</button>
            </form>
        }

        <form asp-action="Reject"
              asp-route-id="@r.DirectoryEntryReviewId"
              method="post"
              class="mt-3">
            @Html.AntiForgeryToken()
            <div class="mb-2">
                <label for="reason" class="form-label">Rejection reason (required to reject)</label>
                <textarea id="reason"
                      name="reason"
                      class="form-control"
                      rows="3">@r.RejectionReason</textarea>
                @Html.ValidationMessage("reason", new { @class = "text-danger" })
            </div>
            <button type="submit" class="btn btn-warning">Reject</button>
        </form>

        <form asp-action="Delete"
              asp-route-id="@r.DirectoryEntryReviewId"
              method="post"
              class="mt-3">
            @Html.AntiForgeryToken()
            <button type="submit"
                    class="btn btn-danger"
                    onclick="return confirm('Delete this review permanently?');">
                Delete
            </button>
        </form>
    </div>

    <hr />

    <!-- ===================== -->
    <!-- Replies for this review -->
    <!-- ===================== -->
    @{
        // Admin: show ALL replies (pending/approved/rejected) for context
        var replies = await CommentRepo.ListForReviewAsync(r.DirectoryEntryReviewId);
    }

    <h2 class="mt-3">Replies (@replies.Count)</h2>

    @if (!replies.Any())
    {
        <p><i>No replies for this review.</i></p>
    }
    else
    {
        <div class="table-wrapper">
            <table class="table table-striped table-sm align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>Created (UTC)</th>
                        <th>Fingerprint</th>
                        <th>Excerpt</th>
                        <th style="width:260px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in replies)
                    {
                        <tr>
                            <td>@c.DirectoryEntryReviewCommentId</td>
                            <td>@c.ModerationStatus</td>
                            <td>@(c.CreateDate.ToString("yyyy-MM-dd HH:mm"))</td>
                            <td><code>@c.AuthorFingerprint</code></td>
                            <td>
                                @(string.IsNullOrWhiteSpace(c.Body)
                                                    ? "-"
                                                    : (c.Body.Length > 120 ? c.Body[..120] + "…" : c.Body))
                            </td>
                            <td>
                                <a asp-action="ShowReply"
                                   asp-route-id="@c.DirectoryEntryReviewCommentId">
                                    View
                                </a>

                                @if (c.ModerationStatus != ReviewModerationStatus.Approved)
                                {
                                    <form asp-action="ApproveReply"
                                          asp-route-id="@c.DirectoryEntryReviewCommentId"
                                          method="post"
                                          class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit">Approve</button>
                                    </form>
                                }

                                <a asp-action="ShowReply"
                                   asp-route-id="@c.DirectoryEntryReviewCommentId"
                                   class="ms-1">
                                    Reject/Delete…
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
