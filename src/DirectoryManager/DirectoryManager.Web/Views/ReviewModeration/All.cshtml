@using DirectoryManager.Web.Constants
@using DirectoryManager.Data.Models
@using DirectoryManager.Data.Enums

@model IReadOnlyList<DirectoryEntryReviewComment>

@{
    Layout = "_CenteredLayout";

    var status = ViewBag.Status as ReviewModerationStatus?;
    var title = status.HasValue
        ? $"All Replies ({status})"
        : "All Replies";

    ViewData[StringConstants.TitleHeader] = title;
}

@section PageContent {

    <h1>@ViewData[StringConstants.TitleHeader]</h1>

    @await Html.PartialAsync("_AdminMenu")

    <p class="mb-3">
        <a asp-action="PendingReplies">Pending Queue</a> |
        <a asp-action="AllReplies" asp-route-status="Approved">Approved</a> |
        <a asp-action="AllReplies" asp-route-status="Rejected">Rejected</a> |
        <a asp-action="AllReplies">All</a>
    </p>

    @if (!Model.Any())
    {
        <p><i>No replies found.</i></p>
    }
    else
    {
        <div class="table-wrapper">
            <table class="table table-striped table-sm align-middle">
                <thead>
                    <tr>
                        <th>Id</th>
                        <th>Status</th>
                        <th>Review Id</th>
                        <th>Parent</th>
                        <th>Created (UTC)</th>
                        <th>Updated (UTC)</th>
                        <th>Fingerprint</th>
                        <th>Excerpt</th>
                        <th style="width:240px;">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var c in Model)
                    {
                        <tr>
                            <td>@c.DirectoryEntryReviewCommentId</td>
                            <td>@c.ModerationStatus</td>
                            <td>@c.DirectoryEntryReviewId</td>
                            <td>@(c.ParentCommentId?.ToString() ?? "-")</td>
                            <td>@c.CreateDate.ToString("yyyy-MM-dd HH:mm")</td>
                            <td>@((c.UpdateDate?.ToString("yyyy-MM-dd HH:mm")) ?? "-")</td>
                            <td><code>@c.AuthorFingerprint</code></td>
                            <td>
                                @(string.IsNullOrWhiteSpace(c.Body)
                                                    ? "-"
                                                    : (c.Body.Length > 80 ? c.Body[..80] + "…" : c.Body))
                            </td>
                            <td>
                                <a asp-action="ShowReply"
                                   asp-route-id="@c.DirectoryEntryReviewCommentId">
                                    View
                                </a>

                                @if (c.ModerationStatus != ReviewModerationStatus.Approved)
                                {
                                    <form asp-action="ApproveReply"
                                          asp-route-id="@c.DirectoryEntryReviewCommentId"
                                          method="post"
                                          class="d-inline ms-1">
                                        @Html.AntiForgeryToken()
                                        <button type="submit">Approve</button>
                                    </form>
                                }

                                <a asp-action="ShowReply"
                                   asp-route-id="@c.DirectoryEntryReviewCommentId"
                                   class="ms-1">
                                    Reject/Delete…
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }

    @if (ViewBag.Total is int total &&
             ViewBag.Page is int pageNumber &&
             ViewBag.PageSize is int pageSize)
    {
        var last = Math.Max(1, (int)Math.Ceiling(total / (double)pageSize));

        <div class="mt-3">
            <span>Page @pageNumber of @last (@total total)</span>
            <div>
                @if (pageNumber > 1)
                {
                    <a asp-action="AllReplies"
                       asp-route-status="@(status?.ToString())"
                       asp-route-page="@(pageNumber - 1)"
                       asp-route-pageSize="@pageSize">
                        Prev
                    </a>
                    @: |
                }

                @if (pageNumber < last)
                {
                    <a asp-action="AllReplies"
                       asp-route-status="@(status?.ToString())"
                       asp-route-page="@(pageNumber + 1)"
                       asp-route-pageSize="@pageSize">
                        Next
                    </a>
                }
            </div>
        </div>
    }
}
