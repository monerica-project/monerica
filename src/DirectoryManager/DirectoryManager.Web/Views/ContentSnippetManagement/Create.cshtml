@model DirectoryManager.Web.Models.ContentSnippet.ContentSnippetEditModel
@{
    ViewData["Title"] = "Create Snippet";
}

<h2>@ViewData["Title"]</h2>

@await Html.PartialAsync("_AdminMenu")

<form asp-controller="ContentSnippetManagement" asp-action="Create" method="post" class="form-horizontal">
 
    <div class="form-group">
        <label asp-for="SnippetType" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <select asp-for="SnippetType"
                    asp-items="Model.UnusedSnippetTypes"></select>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="Content" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea asp-for="Content" class="form-control" rows="10"></textarea>
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-success">Create</button>
        </div>
    </div>

</form>