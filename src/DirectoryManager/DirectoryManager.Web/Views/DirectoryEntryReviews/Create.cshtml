@using DirectoryManager.Web.Models
@model CreateDirectoryEntryReviewInputModel
@{
    ViewData["Title"] = "Create Review";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <div class="top-section search-section search-top-align">
        @await Html.PartialAsync("_SearchForm")
    </div>

    <div class="container py-4">
        <h1 class="mb-3">Create Review</h1>
        <hr />

        <form asp-controller="DirectoryEntryReviews"
              asp-action="Create"
              method="post">
            @Html.AntiForgeryToken()

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Please fix the following errors:</strong>
                    <ul class="mb-0">
                        @foreach (var entry in ViewData.ModelState)
                        {
                            foreach (var error in entry.Value!.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="DirectoryEntryId" class="form-label"></label>
                            <input asp-for="DirectoryEntryId" class="form-control" />
                            <span asp-validation-for="DirectoryEntryId" class="text-danger"></span>
                        </div>

                        <div class="col-md-4">
                            <label asp-for="Rating" class="form-label"></label>
                            <select asp-for="Rating" class="form-select select-fit" aria-describedby="Rating_help">
                                <option value="">— Select a rating —</option>
                                <option value="5">5 – Excellent</option>
                                <option value="4">4 – Good</option>
                                <option value="3">3 – Okay</option>
                                <option value="2">2 – Poor</option>
                                <option value="1">1 – Bad</option>
                            </select>
                            <span id="Rating_help" class="form-text">Required.</span>
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>

                        <div class="col-12">
                            <label asp-for="Body" class="form-label"></label>
                            <textarea asp-for="Body" rows="8" class="form-control"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>

                        <!-- ✅ Single order proof textbox -->
                        <div class="col-12">
                            <label asp-for="OrderProof" class="form-label">Order Proof (optional)</label>
                            <input asp-for="OrderProof" class="form-control" maxlength="2048" />
                            <span asp-validation-for="OrderProof" class="text-danger"></span>
                            <div class="form-text">Paste either an order ID or an order URL.</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary btn-cta">Save</button>
                <a asp-controller="DirectoryEntryReviews" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

        <hr />
    </div>
}
