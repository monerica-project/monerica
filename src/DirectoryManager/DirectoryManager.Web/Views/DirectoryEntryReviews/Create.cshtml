@using DirectoryManager.Web.Models

@model CreateDirectoryEntryReviewInputModel
@{
    ViewData["Title"] = "Create Review";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <div class="top-section search-section search-top-align">
        @await Html.PartialAsync("_SearchForm")
    </div>

    <div class="container py-4">
        <h1 class="mb-3">Create Review</h1>
        <hr />

        <form asp-controller="DirectoryEntryReviews"
              asp-action="Create"
              method="post">
            @Html.AntiForgeryToken()

            <!-- Global validation summary (server-side) -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger">
                    <strong>Please fix the following errors:</strong>
                    <ul class="mb-0">
                        @foreach (var entry in ViewData.ModelState)
                        {
                            foreach (var error in entry.Value!.Errors)
                            {
                                <li>@error.ErrorMessage</li>
                            }
                        }
                    </ul>
                </div>
            }

            <div class="card">
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-md-4">
                            <label asp-for="DirectoryEntryId" class="form-label"></label>
                            <input asp-for="DirectoryEntryId" class="form-control" />
                            <span asp-validation-for="DirectoryEntryId" class="text-danger"></span>
                        </div>
                        <div class="col-md-4">
                            <label asp-for="Rating" class="form-label"></label>
                            <input asp-for="Rating" class="form-control" />
                            <span asp-validation-for="Rating" class="text-danger"></span>
                        </div>
                        <div class="col-12">
                            <label asp-for="Body" class="form-label"></label>
                            <textarea asp-for="Body" rows="8" class="form-control"></textarea>
                            <span asp-validation-for="Body" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-controller="DirectoryEntryReviews" asp-action="Index" class="btn btn-secondary">Cancel</a>
            </div>
        </form>

        <hr />
 
    </div>
}
