// DirectoryManager.Web/Views/DirectoryEntryReviews/Delete.cshtml
@using DirectoryManager.Data.Models
@model DirectoryEntryReview
@{
    ViewData["Title"] = "Delete Review";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <div class="top-section search-section search-top-align">
        @await Html.PartialAsync("_SearchForm")
    </div>

    <div class="container py-4">
        <h1 class="mb-3">Delete Review</h1>
        <hr />
        <div class="alert alert-warning">Are you sure you want to delete this review?</div>

        <div class="card mb-3">
            <div class="card-body">
                <table class="table table-borderless mb-0">
                    <tbody>
                        <tr><th>Id</th><td>@Model.DirectoryEntryReviewId</td></tr>
                        <tr><th>Directory Entry Id</th><td>@Model.DirectoryEntryId</td></tr>
                        <tr><th>Rating</th><td>@Model.Rating</td></tr>
                    </tbody>
                </table>
            </div>
        </div>

        <form asp-action="Delete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="DirectoryEntryReviewId" />
            <button type="submit" class="btn btn-danger">Delete</button>
            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        </form>

        <hr />
        @await Html.PartialAsync("_SponsoredListingPartial")
    </div>
}
