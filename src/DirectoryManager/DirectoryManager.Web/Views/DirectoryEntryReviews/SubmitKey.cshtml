@{
    Layout = "_CenteredLayout";
    ViewData["Title"] = "Submit your PGP public key";
}
<h1>Submit your PGP public key</h1>
<p>Paste your ASCII-armored <strong>public</strong> key. We’ll send you an encrypted 6-digit code.</p>

<form method="post" asp-action="SubmitKeyPost">
    @Html.AntiForgeryToken()
    <input type="hidden" name="flowId" value="@ViewBag.FlowId" />

    <div class="mb-3">
        <label class="form-label">PGP Public Key (ASCII armored)</label>
        <textarea name="pgpArmored" class="form-control" rows="10" required></textarea>
        @Html.ValidationSummary()
    </div>

    <button class="btn btn-primary" type="submit">Get encrypted code</button>
</form>