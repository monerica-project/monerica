@model DirectoryManager.Web.Models.CreateDirectoryEntryReviewInputModel
@{
    Layout = "_CenteredLayout";
    ViewData["Title"] = "Write your review";
}
<h1>Write your review</h1>
<p class="text-muted">
    Your review will be submitted for manual moderation and won’t appear publicly until approved.
</p>

<form method="post" asp-action="ComposePost">
    @Html.AntiForgeryToken()
    <input type="hidden" name="flowId" value="@ViewBag.FlowId" />
    <input type="hidden" name="DirectoryEntryId" value="@Model.DirectoryEntryId" />

    <div class="mb-3">
        <label class="form-label">Rating</label>
        <select name="Rating" class="form-select">
            <option value="5" selected>5</option>
            <option value="4">4</option>
            <option value="3">3</option>
            <option value="2">2</option>
            <option value="1">1</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Review</label>
        <textarea name="Body" class="form-control" rows="8" maxlength="5000" required></textarea>
    </div>

    <div class="mb-2 text-muted">
        Verified reviewer: @ViewBag.PgpFingerprint
    </div>

    <button class="btn btn-success" type="submit">Submit review</button>
</form>
