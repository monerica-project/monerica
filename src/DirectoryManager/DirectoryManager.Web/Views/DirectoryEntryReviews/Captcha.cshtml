@using DirectoryManager.Web.Constants
@{
    ViewData[StringConstants.TitleHeader] = "Leave a Review – CAPTCHA";
    Layout = "_CenteredLayout";
}

@section PageContent {
    <h1>@ViewData[StringConstants.TitleHeader]</h1>
    <hr />

    <div asp-validation-summary="All" class="text-danger"></div>

    <form asp-action="CaptchaPost" asp-controller="DirectoryEntryReviews" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="flowId" value="@ViewBag.FlowId" />

        @await Html.PartialAsync("_CaptchaBlock", "review")

        <br />
        <button type="submit" class="btn btn-primary">Continue</button>
    </form>
}
